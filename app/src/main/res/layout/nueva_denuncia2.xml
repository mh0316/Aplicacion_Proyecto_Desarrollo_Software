<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header (MODIFICADO - agregado tv_user_info) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="16dp">

            <!-- Primera fila: Logo, título y botón cerrar sesión -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="#0EA5A4"
                    android:gravity="center"
                    android:text="DT"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DT Denuncias de Tránsito"
                        android:textSize="18sp"
                        android:textColor="#0F172A"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reporta fallas de tránsito en Temuco - rápido y sencillo"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_cerrar_sesion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerrar Sesión"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/button_red_background"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Segunda fila: Información del usuario (NUEVO) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F8FAFC"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:layout_marginEnd="8dp"
                    android:tint="#0EA5A4" />

                <TextView
                    android:id="@+id/tv_user_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Usuario: Cargando..."
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:textStyle="normal" />

            </LinearLayout>
        </LinearLayout>

        <!-- Navegación (mantener igual) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_inicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Inicio"
                android:background="@drawable/button_inactive_background"
                android:textColor="#0F172A"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btn_nueva_denuncia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nueva Denuncia"
                android:background="@drawable/button_active_background"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_ayuda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ayuda"
                android:background="@drawable/button_inactive_background"
                android:textColor="#0F172A"
                android:minHeight="48dp" />
        </LinearLayout>

        <!-- Paso 3: Evidencia (mantener igual) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Evidencia"
                android:textSize="16sp"
                android:textColor="#0F172A"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puedes subir foto(s), un vídeo o sólo texto."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_foto"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Foto"
                    android:background="@drawable/button_category_background"
                    android:textColor="#0F172A"
                    android:layout_marginEnd="8dp"
                    android:drawableTop="@android:drawable/ic_menu_camera"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_video"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Vídeo"
                    android:background="@drawable/button_category_background"
                    android:textColor="#0F172A"
                    android:layout_marginEnd="8dp"
                    android:drawableTop="@android:drawable/ic_menu_camera"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btn_ver_seleccion"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Ver selección"
                    android:background="@drawable/button_category_background"
                    android:textColor="#0F172A"
                    android:drawableTop="@android:drawable/ic_menu_gallery"
                    android:gravity="center" />

            </LinearLayout>
        </LinearLayout>

        <!-- Paso 4: Ubicación - MODIFICADO para OSMDroid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Ubicación (Temuco)"
                android:textSize="16sp"
                android:textColor="#0F172A"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toca el mapa para seleccionar la ubicación exacta de la falta."
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp" />

            <!-- Mapa OSMDroid pequeño -->
            <org.osmdroid.views.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_marginBottom="8dp" />

            <!-- Información de ubicación seleccionada -->
            <LinearLayout
                android:id="@+id/layout_info_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="12dp"
                android:background="#F8FAFC"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_coordenadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coordenadas: "
                    android:textSize="12sp"
                    android:textColor="#374151"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dirección: "
                    android:textSize="12sp"
                    android:textColor="#374151" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ubicacion_no_seleccionada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicación: no seleccionada"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:padding="12dp" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:background="@drawable/button_inactive_background"
                    android:textColor="#0F172A"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_siguiente_revisar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Siguiente: revisar"
                    android:background="@drawable/button_active_background"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btn_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:background="@drawable/button_inactive_background"
            android:textColor="#0F172A"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />

    </LinearLayout>
</ScrollView>