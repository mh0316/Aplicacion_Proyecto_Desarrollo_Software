<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona la ubicaci贸n exacta"
        android:textSize="16sp"
        android:textColor="#0F172A"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:gravity="center" />

    <!-- Contenedor para el MapView - CORREGIDO: sin orientaci贸n horizontal -->
    <LinearLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8FAFC"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/tv_coordenadas_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordenadas: no seleccionadas"
            android:textSize="12sp"
            android:textColor="#374151"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_direccion_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direcci贸n: no seleccionada"
            android:textSize="12sp"
            android:textColor="#374151" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirmar_ubicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Ubicaci贸n"
        android:background="@drawable/button_active_background"
        android:textColor="#FFFFFF"
        android:enabled="false" />

</LinearLayout>