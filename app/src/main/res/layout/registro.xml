<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:padding="16dp"
    android:fillViewport="true"> <!-- Agregar esto -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo/Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_logo"
                android:background="@drawable/gradient_background"
                android:padding="12dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DT Denuncias de Tránsito"
                    android:textSize="18sp"
                    android:textColor="#0F172A"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear Cuenta"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Formulario de Registro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Cuenta"
                android:textSize="20sp"
                android:textColor="#0F172A"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Campo Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="14sp"
                android:textColor="#0F172A"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Ingrese su nombre"
                android:textColor="#0F172A"
                android:textColorHint="#6B7280"
                android:layout_marginBottom="16dp" />

            <!-- Campo Apellido -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textSize="14sp"
                android:textColor="#0F172A"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Ingrese su apellido"
                android:textColor="#0F172A"
                android:textColorHint="#6B7280"
                android:layout_marginBottom="16dp" />

            <!-- Campo RUT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RUT"
                android:textSize="14sp"
                android:textColor="#0F172A"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etRut"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Ej: 12345678-9"
                android:textColor="#0F172A"
                android:textColorHint="#6B7280"
                android:layout_marginBottom="16dp" />

            <!-- Campo Correo Electrónico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo Electrónico"
                android:textSize="14sp"
                android:textColor="#0F172A"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Ingrese su correo electrónico"
                android:textColor="#0F172A"
                android:textColorHint="#6B7280"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="16dp" />

            <!-- Campo Contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña (máx. 10 caracteres)"
                android:textSize="14sp"
                android:textColor="#0F172A"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Ingrese su contraseña"
                android:textColor="#0F172A"
                android:textColorHint="#6B7280"
                android:inputType="textPassword"
                android:maxLength="10"
                android:layout_marginBottom="16dp" />

            <!-- Campo Confirmar Contraseña -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar Contraseña"
                android:textSize="14sp"
                android:textColor="#0F172A"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="Confirme su contraseña"
                android:textColor="#0F172A"
                android:textColorHint="#6B7280"
                android:inputType="textPassword"
                android:maxLength="10"
                android:layout_marginBottom="24dp" />

            <!-- Botón Registrar -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Guardar Registro"
                android:background="@drawable/button_active_background"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Botón Volver al Login - MEJORADO -->
            <Button
                android:id="@+id/btnBackToLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Volver al Login"
                android:background="@drawable/button_outline_background"
                android:textColor="#0F172A"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>